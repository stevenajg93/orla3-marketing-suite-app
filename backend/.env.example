# ==============================================================================
# File: backend/.env.example
# Purpose: Environment variables template for FastAPI backend
# Instructions: Copy this to .env and fill in your actual credentials
# ==============================================================================

# ==============================================================================
# REQUIRED - Database (Auto-injected by Railway in production)
# ==============================================================================
DATABASE_URL=postgresql://user:password@localhost:5432/orla3_db

# ==============================================================================
# REQUIRED - AI Services
# ==============================================================================
OPENAI_API_KEY=sk-proj-your-key-here
ANTHROPIC_API_KEY=sk-ant-your-key-here

# ==============================================================================
# REQUIRED - Image Search
# ==============================================================================
UNSPLASH_ACCESS_KEY=your-unsplash-access-key

# ==============================================================================
# Google Drive Configuration (Optional)
# ==============================================================================
# OAuth2 credentials from Google Cloud Console
# Project: gen-lang-client-0681683640
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
# Generate refresh token using: python3 get_google_drive_token.py
GOOGLE_REFRESH_TOKEN=

# Legacy shared drive config (deprecated in multi-tenant mode)
SHARED_DRIVE_ID=
SHARED_DRIVE_NAME=
MARKETING_FOLDER_NAME=Marketing

# ==============================================================================
# OneDrive Configuration (Optional)
# ==============================================================================
# Get from: Azure Portal > App Registrations
# Client ID and Secret from your Azure app
ONEDRIVE_CLIENT_ID=
ONEDRIVE_CLIENT_SECRET=
# Generate refresh token using: python3 get_onedrive_token.py
ONEDRIVE_REFRESH_TOKEN=

# ==============================================================================
# Dropbox Configuration (Optional)
# ==============================================================================
# Get from: https://www.dropbox.com/developers/apps
# App Key and Secret from your Dropbox app
DROPBOX_APP_KEY=
DROPBOX_APP_SECRET=
# Generate refresh token using: python3 get_dropbox_token.py
DROPBOX_REFRESH_TOKEN=

# ==============================================================================
# Application URLs
# ==============================================================================
FRONTEND_URL=http://localhost:3000
BACKEND_URL=http://localhost:8000

# ==============================================================================
# Email Service (Resend)
# ==============================================================================
# Get from: https://resend.com/api-keys
# Free tier: 3,000 emails/month, 100 emails/day
RESEND_API_KEY=re_...
FROM_EMAIL=noreply@orla3.com

# ==============================================================================
# Stripe Payment Processing
# ==============================================================================
# Get from: https://dashboard.stripe.com/apikeys
# Secret key (server-side only, never expose)
STRIPE_SECRET_KEY=sk_test_...
# Publishable key (optional for backend, required for frontend)
STRIPE_PUBLISHABLE_KEY=pk_test_...
# Webhook signing secret (for Stripe webhook verification)
STRIPE_WEBHOOK_SECRET=whsec_...

# ==============================================================================
# SOCIAL MEDIA - TikTok
# ==============================================================================
TIKTOK_CLIENT_KEY=
TIKTOK_CLIENT_SECRET=

# ==============================================================================
# SOCIAL MEDIA - WordPress
# ==============================================================================
WORDPRESS_SITE_URL=https://yoursite.wordpress.com
WORDPRESS_APP_PASSWORD=

# ==============================================================================
# SOCIAL MEDIA - Tumblr
# ==============================================================================
TUMBLR_CONSUMER_KEY=
TUMBLR_CONSUMER_SECRET=

# ==============================================================================
# SOCIAL MEDIA - Reddit
# ==============================================================================
REDDIT_CLIENT_ID=
REDDIT_CLIENT_SECRET=

# ==============================================================================
# SOCIAL MEDIA - Facebook
# ==============================================================================
FACEBOOK_CLIENT_ID=
FACEBOOK_CLIENT_SECRET=

# ==============================================================================
# SOCIAL MEDIA - Instagram (uses same credentials as Facebook)
# ==============================================================================
INSTAGRAM_CLIENT_ID=
INSTAGRAM_CLIENT_SECRET=

# ==============================================================================
# SOCIAL MEDIA - YouTube
# ==============================================================================
YOUTUBE_CLIENT_ID=
YOUTUBE_CLIENT_SECRET=

# ==============================================================================
# SOCIAL MEDIA - Twitter/X
# ==============================================================================
TWITTER_API_KEY=
TWITTER_API_SECRET=
TWITTER_ACCESS_TOKEN=
TWITTER_ACCESS_TOKEN_SECRET=

# ==============================================================================
# Google Cloud Platform (Vertex AI for Imagen 3 & Veo 3.1, Cloud Storage)
# ==============================================================================
# Get OAuth2 credentials from: https://console.cloud.google.com/apis/credentials
GCP_PROJECT_ID=gen-lang-client-0902837589
GCP_CLIENT_ID=your_gcp_client_id
GCP_CLIENT_SECRET=your_gcp_client_secret
GCP_REFRESH_TOKEN=your_gcp_refresh_token

# Google Cloud Storage bucket for brand assets (logos, images)
# Optional: Defaults to {project_id}-brand-assets if not specified
GCS_BUCKET_NAME=gen-lang-client-0902837589-brand-assets

# ==============================================================================
# Gemini API (used for carousel generation)
# ==============================================================================
GEMINI_API_KEY=your_gemini_api_key
